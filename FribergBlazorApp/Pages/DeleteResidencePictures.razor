@page "/drp/{id}"
@inject HttpClient client
@inject NavigationManager Navigation

<h3>Delete Pictures</h3>

<p>Are you sure you want to delete this picture?</p>

<button @onclick="RemovePicture">Yes, Delete</button>

<p>@returnText</p>

@code {
    string returnText = "";

    [Parameter]
    public string? id { get; set; }

    async Task RemovePicture()
    {
        try
        {
            HttpResponseMessage response = await client.DeleteAsync($"api/residencepictures/{id}");
            if (response.IsSuccessStatusCode)
            {
                returnText = "Picture deleted successfully!";
                Navigation.NavigateTo("/rp");
            }
            else
            {
                returnText = "Failed to delete picture: " + response.ReasonPhrase;
            }
        }
        catch (Exception ex)
        {
            returnText = "Error: " + ex.Message;
        }
    }
}
