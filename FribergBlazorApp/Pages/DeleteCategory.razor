@page "/dc/{id}"
@inject HttpClient client
@inject NavigationManager Navigation

<h3>Delete Category</h3>

<p>Are you sure you want to delete this category?</p>

<button @onclick="RemoveCategory">Yes, Delete</button>

<p>@returnText</p>

@code {
    string returnText = "";

    [Parameter]
    public string id { get; set; }

    async Task RemoveCategory()
    {
        try
        {
            HttpResponseMessage response = await client.DeleteAsync($"api/category/{id}");
            if (response.IsSuccessStatusCode)
            {
                returnText = "Category deleted successfully!";
                Navigation.NavigateTo("/c");
            }
            else
            {
                returnText = "Failed to delete category: " + response.ReasonPhrase;
            }
        }
        catch (Exception ex)
        {
            returnText = "Error: " + ex.Message;
        }
    }
}
